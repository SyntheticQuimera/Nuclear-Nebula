---
interface Props {
  title: string;
  excerpt: string;
  featuredImage: string;
  date: string;
  slug: string;
}

const { title, excerpt, featuredImage, date, slug } = Astro.props as Props;
---

<article
  class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-105 duration-300"
>
  <img src={featuredImage} alt={title} class="w-full h-48 object-cover" />
  <div class="p-6">
    <h2
      class="text-xl font-bold mb-2 text-gaming-primary hover:text-gaming-secondary"
    >
      <a href={`/post/${slug}`}> {title} </a>
    </h2>
    <p class="text-gray-600 mb-4">{excerpt}</p>
    <p class="text-gray-700 text-sm">{date}</p>
  </div>
</article>
